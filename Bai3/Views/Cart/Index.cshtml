@model Bai3.ViewModels.CartViewModels
<div class="products">
    <div class="panel panel-prod">
        <div class="panel-heading panel-heading-prod">Giỏ hàng của bạn</div>
        <div class="panel-body">
            @if (Model.CartItems.Count > 0)
            {
                <table class="table table-bordered" style="margin: 0">
                    <thead>
                        <tr style="text-align:center;font-weight:bold">
                            <td>Mã SP</td>
                            <td>Tên SP</td>
                            <td>Ảnh SP</td>
                            <td>Số lượng</td>
                            <td>Đơn giá</td>
                            <td>Thành tiền</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td style="text-align:center">@item.Product.IdPro</td>
                                <td style="text-align:center">@item.Product.NamePro</td>
                                <td style="text-align:center">
                                    <img src="~/images/products/@item.Product.Img1" width="100" />
                                </td>

                                <td style ="text-align:center">
                                    <input type="text" class="txtQuantity" data-id="@item.Product.IdPro" value="@item.Quantity" />
                                </td>

                                <td style="text-align:center">
                                    @String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", item.Product.Price.GetValueOrDefault(0))
                                </td>

                                <td style="text-align:center">
                                    @String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:c}", item.Product.Price.GetValueOrDefault(0) * item.Quantity)
                                </td>

                                <td style ="text-align:center">
                                    <a href="#" data-id="@item.Product.IdPro" class="btn-delete">Xoá</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <div style="margin:16px 0">
                    <button id="btnContinue" class="btn cart-button-success">
                        Tiếp tục mua hàng
                    </button>
                    <button id="btnUpdate" class="btn cart-button-success">Cập nhật giỏ hàng</button>
                    <button id="btnDeleteAll" class="btn cart-button-success">Xoá giỏ hàng</button>
                    <button id="btnPayment" class="btn cart-button-success">Thanh toán</button>
                </div>
                
            }
            else
            {

                <div style="margin-top:10px;margin-bottom:10px;margin-left:auto; margin-right:auto">

                    <span class="alert alert-danger">
                        Bạn chưa có sản phẩm nào trong giỏ hàng
                    </span>
                </div>
            }
        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/cart.js"></script>
}