@model Bai3.ViewModels.UserViewModel
<div class="products">
    <div class="panel panel-prod">
        <div class="panel-heading panel-heading-prod">
            Thông tin người dùng
        </div>

        <div class="panel-body">
            <form class="form form-horizontal">
                <div class="form-group">
                    <label class="col-md-3">Tên đăng nhập: </label>
                    <div class="col-md-9">

                        <input type="text" class="form-control" asp-for="Register.Username" readonly />

                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3">Họ và tên: </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="Register.Name" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3">Địa chỉ: </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="Register.Address" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3">Email: </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="Register.Email" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3">Số điện thoại: </label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" asp-for="Register.Phone" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-4 col-md-8">
                        <a href="up-date">
                            <button type="button" class="btn btn-danger"><i class="fa fa-spin fa-spinner"></i>Chỉnh Sửa Thông Tin</button>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
